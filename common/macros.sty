% Lecture Slides Cover
\newcommand{\lecturecover}[2]{%
  % #1 = lecture number, #2 = lecture title
  \begin{frame}[plain]
    \centering
    {\Large \coursename\par}
    {\Large \coursecode\par}
    \vfill
    {\Huge Lecture #1\par}
    \bigskip
    {\LARGE #2\par}
    \vfill
    {\large \instructor\par}
    {\large \institution \par}
    {\large \semester\par}
  \end{frame}
}

